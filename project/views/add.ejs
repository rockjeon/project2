<body>

  <div class="container">
    <div class="row">
      <div class="col-lg-10 col-xl-9 mx-auto">
        <div class="card card-signin flex-row my-5">
          <div class="card-img-left d-none d-md-flex">
            <script>
              window.addEventListener('load', async () => {
            // Modern dapp browsers...
              if (window.ethereum) {
                  window.web3 = new Web3(ethereum);
                  try {
                      // Request account access if needed
                      await ethereum.enable();
                      // Acccounts now exposed
                      web3.eth.sendTransaction({/* ... */});
                  } catch (error) {
                      // User denied account access...
                  }
              }
              // Legacy dapp browsers...
              else if (window.web3) {
                  window.web3 = new Web3(web3.currentProvider);
                  // Acccounts always exposed
                  web3.eth.sendTransaction({/* ... */});
              }
              // Non-dapp browsers...
              else {
                  console.log('Non-Ethereum browser detected. You should consider trying MetaMask!');
              }
              var account = web3.eth.accounts[0];
            
              if (web3.eth.accounts[0] !== account) {
                account = web3.eth.accounts[0];
               // document.getElementById("address").innerHTML = account;
              } 
            console.log(account);
            $('#inputEthAddress').val(account);

            });
         
            </script>
          </div>
          <div class="card-body">
            <h5 class="card-title text-center">Sign Up</h5>
            <form class="form-signup">
              <div class="form-label-group">
                <input type="text" id="inputEthAddress" class="form-control" placeholder="ETH_Address" value="" required readonly>

                <label for="inputEthAddress">Eth_Address</label>
              </div>
              <div class="form-label-group">
                <input type="text" id="inputId" class="form-control" placeholder="ID" required>
                <label for="inputId">ID</label>
              </div>
              <div class="form-label-group">

                <input type="password" id="inputPassword" class="form-control" placeholder="password" required>
                <label for="inputPassword">Password</label>
              </div>

              <div class="form-label-group">

                <input type="password" id="confirm_Password" class="form-control" placeholder="confirm_Password" required>
                <label for="confirm_Password">Confirm password</label>
              </div>


              <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit" id="confirm">Sign Up</button>
            </form>
            <hr class="my-4">
          </div>
        </div>

      </div>

</body>
</html>